{{#if failed}}
  <h4 class="bg-danger text-white p-2 text-center">
    Authentication failed. Please try again.
  </h4>
{{/if}}
<form action="login" method="post">
  <div class="form-control">
    <label class="form-label" for="username">Name:</label>
    <input name="username" id="username" class="form-input" />
  </div>
  <div class="form-control">
    <label class="form-label" for="password">Password:</label>
    <input name="password" id="password" type="password" class="form-input" />
  </div>
  <div class="form-control">
    <input type="submit" value="Sign in" />
  </div>
</form>
<div>
  Allowed names: u1, u2, u3. Any passwords are valid.
</div>